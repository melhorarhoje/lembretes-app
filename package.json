{
  "name": "lembretes-app",
  "version": "1.0.0",
  "description": "Sistema de Lembretes Compartilhados com Firebase",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable"
  },
  "keywords": ["lembretes", "electron", "firebase"],
  "author": "Seu Nome",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.lembretes.app",
    "productName": "Lembretes Compartilhados",
    "directories": {
      "output": "dist"
    },
    "files": [
      "*.js",
      "*.html",
      "*.css",
      "*.mp3",
      "!node_modules",
      "!dist"
    ],
    "win": {
      "target": "portable"
    }
  }
}
