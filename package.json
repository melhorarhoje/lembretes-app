{
  "name": "compi-lembretes",
  "version": "1.0.0",
  "description": "COMPI - Painel de Lembretes Compartilhados",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win portable",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --dir"
  },
  "keywords": [
    "compi",
    "lembretes",
    "firebase",
    "electron"
  ],
  "author": "Seu Nome",
  "license": "MIT",
  "dependencies": {
    "firebase": "^9.23.0",
    "png2icons": "^2.0.1",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.compi.lembretes",
    "productName": "COMPI - Painel de Lembretes",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": ["nsis","portable"]
    },
    "mac": {
      "icon": "assets/icon.icns",
      "target": ["dmg","zip"]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": ["AppImage","deb"]
    }
  }
}
