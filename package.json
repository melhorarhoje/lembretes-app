{
  "name": "compi-lembretes",
  "version": "1.0.0",
  "description": "COMPI - Painel de Lembretes Compartilhados",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable"
  },
  "keywords": [
    "compi",
    "lembretes",
    "firebase",
    "electron"
  ],
  "author": "Seu Nome",
  "license": "MIT",
  "dependencies": {
    "firebase": "^9.23.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.compi.lembretes",
    "productName": "COMPI - Painel de Lembretes",
    "directories": {
      "output": "dist",
      "extraResources": [
        "tray-icon.png  "
      ]
    },
    "files": [
      "*.js",
      "*.html",
      "*.css",
      "*.mp3",
      "*.png",
      "node_modules/firebase/**/*",
      "!node_modules/**/*.{md,markdown,ts}",
      "!dist"
    ],
    "win": {
      "target": "portable"
    }
  }
}
